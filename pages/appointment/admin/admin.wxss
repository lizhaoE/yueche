/* pages/appointment/appointment/admin/admin.wxss */
.container{
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.title{
  height: 50rpx;
  text-align:center;
  width: 100%;
  font-weight:bolder;
}

.container_grip{
  box-shadow: 0px 0px 0px 2px rgb(232, 232, 235);
  display: flex;
  align-items: left;
  flex-direction: column;
  margin-top: 30rpx;
  width: 650rpx;
  background-color: #F7F7FA;
  padding-bottom: 10px;
  padding-top: 10px;
}
.container_grip button{
  height: 60rpx;
  margin-top: 20rpx;
  line-height: 60rpx;
}
.list{
margin-left: 20rpx;
margin-bottom: 20rpx;
}
.list-detail{
  margin-left: 50rpx;
}
.button-item{
  display: flex;
  flex-flow: row; 
}
.appoint-delete{
 margin-top: 10rpx; 
 margin-left:20rpx;
}
.appoint-detail{
  margin-top: 20rpx; 
  margin-left:50rpx;
}
.form{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
  flex-wrap: wrap;
}
.form text{
  font-weight:bolder;
}
.form input{
  border: 2px solid rgb(232, 232, 235);
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 60rpx;
  width: 600rpx;
}
.form button{
  height: 80rpx;
  margin-top: 80rpx;
  margin-bottom: 20rpx;
  line-height: 80rpx;
}

